            <Button  Content="%" Background="#FF0BA68A" Foreground="Black" Padding="10" FontFamily="ISOCPEUR" FontSize="22"/>
            <Button  Content="C" Background="#FF0BA68A" Foreground="Black" Padding="10" FontFamily="ISOCPEUR" FontSize="22"/>           
            <Button  Content="CE" Background="#FF0BA68A" Foreground="Black" Padding="10" FontFamily="ISOCPEUR" FontSize="22"/>
            <Button  Content="←" Background="#FF0BA68A" Foreground="Black" Padding="10" FontFamily="ISOCPEUR" FontSize="22"/>           
              
        </UniformGrid>
    </Grid>
</Window>
